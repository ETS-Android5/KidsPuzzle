<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzle_bg_narrower"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="182dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/usernameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_round" />


    <ListView
        android:id="@+id/list_usernames"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbarThumbVertical="@color/design_default_color_primary"

        />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:alpha="1"
        android:backgroundTint="@color/beige"
        android:onClick="startGame"
        android:shadowColor="@color/teal"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Start game"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/createUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:alpha="0.9"
        android:backgroundTint="@color/beige"
        android:onClick="createUsername"
        android:shadowColor="@color/teal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Create new user"
        android:textColor="@color/blue_dark1"
        android:textStyle="bold" />


</LinearLayout>